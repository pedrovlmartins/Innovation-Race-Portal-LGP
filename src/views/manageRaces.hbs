{{>header pageName="Manage Races"}}
<div class="container">

    {{>actionResults}}

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Manage Races</h1>
            </div>
        </div>
    </header>

    <button class="btn btn-default" data-toggle="modal" data-target="#createRaceModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New race</button>

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Phase</th>
        </tr>
        </thead>
        <tbody>
        {{#each races}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{phase}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                {{#if keyword}}
                    {{add-pagination "/manageRaces" page totalPages keyword}}
                {{else}}
                    {{add-pagination "/manageRaces" page totalPages ""}}
                {{/if}}
            </ul>
        </div>
    </div>

</div>

{{>createRace}}