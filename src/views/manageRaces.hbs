{{>header pageName="Manage Races"}}
<div class="container">

    {{>actionResults}}

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Manage Races</h1>
                <hr>
            </div>
        </div>
    </header>

    <button class="btn btn-default btn-lg" data-toggle="modal" data-target="#createRaceModal">Create new race</button>

    <table class="table table-hover table-bordered rankingTable">
        <thead class="rankingTableHead">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Phase</th>
        </tr>
        </thead>
        <tbody>
        {{#each races}}
            <tr>
                <td><a href="/races/{{id}}">{{title}}</a></td>
                <td>{{description}}</td>
                <td>{{phase}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                {{#if keyword}}
                    {{add-pagination "/manageRaces" page totalPages keyword}}
                {{else}}
                    {{add-pagination "/manageRaces" page totalPages ""}}
                {{/if}}
            </ul>
        </div>
    </div>

</div>

{{>createRace}}