{{>header pageName="Manage Races"}}
<script src="js/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/sweetalert.css">
<script src="js/manageRaces.js"></script>
<div class="container">

    {{>actionResults}}

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Manage Races</h1>
            </div>
        </div>
    </header>

    <button class="btn btn-default" data-toggle="modal" data-target="#createRaceModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New race</button>

    <table class="table table-hover table-bordered table-responsive">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Phase</th>
            <th class="table-column-smallest">Cancel</th>
        </tr>
        </thead>
        <tbody>
        {{#each races}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{phase}}</td>
                <td>{{#unless finished}}<a href="#"><span class="glyphicon glyphicon-remove race-remove" data-id="{{id}}" aria-hidden="true"></span></a>{{/unless}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                {{#if keyword}}
                    {{add-pagination "/manageRaces" page totalPages keyword}}
                {{else}}
                    {{add-pagination "/manageRaces" page totalPages ""}}
                {{/if}}
            </ul>
        </div>
    </div>

</div>

{{>createRace}}