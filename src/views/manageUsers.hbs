{{>header pageName="Manage Users"}}

<div class="container">

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <div class="row">
                    <div class="col-md-9">
                        <h1 id="homeHeading">Manage Users</h1>
                    </div>
                    <div class="col-md-3">
                        <div id="imaginary_container">
                            <form action="/manageUsers" method="get">
                                <div class="input-group stylish-input-group">
                                    <input type="text" class="form-control searchWord" placeholder="Search" name="keyword" value=''>
                                    <span class="input-group-addon">
                                        <button type="submit">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <table class="table table-hover table-bordered rankingTable">
        <thead class="rankingTableHead">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Position in Altran</th>
            <th>Blocked</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
    {{#if users}}
        {{#each users}}
                <tr class="tablesBackground">
                    <td><a href="/users/{{id}}">{{name}}</a></td>
                    <td>{{email}}</a></td>
                    <td>{{type}}
                        <form class="input-group" action="/users/{{id}}/typeDescription"  method="post" >
                            <select name="type">
                                <option value="0">Unknown</option>
                                <option value="1">Altran member</option>
                                <option id="type" name="type" value="2">Partner</option>
                                <option id="type" name="type" value="3">Client</option>
                                <option id="type" name="type" value="4">R&D Manager</option>
                                <option id="type" name="type" value="5">R&D Committee</option>
                                <option id="type" name="type" value="6">R&D Team</option>
                                <option id="type" name="type" value="7">Technical Director</option>
                                <input type="submit" value="Submit"/>
                            </select>
                        </form> </td>
                    {{#if blocked}}
                        <td>Yes</td>
                    {{else}}
                        <td>No</td>
                    {{/if}}

                    <td>{{#unless isAdmin}}
                        {{#if confirmed}}
                            {{#if blocked}}
                                <a href="/users/{{id}}/unblock">Unblock</a>
                            {{else}}
                                <a href="/users/{{id}}/block">Block</a>
                            {{/if}}
                        {{else}}
                            <a href="/users/{{id}}/confirm">Confirm</a>
                        {{/if}}
                    {{/unless}}
                    </td>
                </tr>
        {{/each}}
    {{else}}
        <tr>
            <td class="noUsers" colspan="5">No users found.</td>
        </tr>
    {{/if}}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                {{#if keyword}}
                    {{add-pagination "/manageUsers" page totalPages keyword}}
                {{else}}
                    {{add-pagination "/manageUsers" page totalPages ""}}
                {{/if}}
            </ul>
        </div>
    </div>
</div>