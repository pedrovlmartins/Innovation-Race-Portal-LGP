{{>header pageName="User Page"}}
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,600i,700,700i" rel="stylesheet">
<link rel="stylesheet" href="../../css/userPage.css">
<script src="../../js/userPage.js"></script>


<div class="container">
    <div class="menu">
        <ul class="userNavbar">
            <li id="profile"><h4><a href="profile">PROFILE</a></h4></li>
            <li id="ideas"><h4><a href="ideas">IDEAS</a></h4></li>
            <li id="submit"><h4><a>SUBMIT IDEA</a></h4></li>
        </ul>
    </div>
    {{#compare page "profile"}}
    <div id="profileDiv" class="profileDiv">
        <div class="well form-horizontal"  id="user_page">
            <fieldset>
                <!-- Name -->

                <div class="form-group">
                    <label class="col-md-4 control-label" >Name</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

                            <form class="input-group" style="width:100%;"  action="/users/{{id}}/name" method="post">
                                <div style="width:calc(100% - 39px);">
                                <input name="name" value="{{name}}" class="form-control" style="overflow:auto;" type="text" readonly ondblclick="this.readOnly='';"></input>
                                </div>
                                <button type="submit" value="Submit" class="input-group-addon" style="width:39px;height:34px;" ><i class="glyphicon glyphicon-edit"></i></button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label class="col-md-4 control-label">Email</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>

                            <form class="input-group" style="width:100%;" action="/users/{{id}}/email" method="post">
                                <div style="width:calc(100% - 39px);">
                                <input name="email" value="{{email}}" class="form-control" type="text" readonly ondblclick="this.readOnly='';" ></input>
                                </div>
                                <button type="submit" value="Submit" class="input-group-addon" style="width:39px;height:34px;" ><i class="glyphicon glyphicon-edit"></i></button>
                            </form>

                        </div>
                    </div>
                </div>

                <!-- Role -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Role</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <input name="role" value="{{typeDescription}}" class="form-control"  type="text" readonly>
                        </div>
                    </div>
                </div>

                {{#compare typeDescription "Altran member"}}
                <!-- Collaborator Number -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Employee nr.</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            <input name="collaboratorNumber" value="{{colaboratorNum}}" class="form-control"  type="text" readonly>
                        </div>
                    </div>
                </div>

                <!-- Job Position / Business Area -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Job Position/Business Area</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-wrench"></i></span>
                            <input name="businessField" value="{{businessField}}" class="form-control"  type="text" readonly>
                        </div>
                    </div>
                </div>

                <!-- Associated Manager -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Associated Manager</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
                            <input name="manager" value="{{manager}}" class="form-control"  type="text" readonly>
                        </div>
                    </div>
                </div>
                {{else}}
                <!-- Referrer -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Referral</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
                            <input name="referral" value="{{referral}}" class="form-control"  type="text" readonly>
                        </div>
                    </div>
                </div>

                <!-- Edit Password-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Change Password</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <form class="input-group" style="width:100%;" action="/users/{{id}}/password" method="post">
                                <div style="width:calc(100% - 39px);">
                                    <input name="password"  class="form-control" type="password" readonly ondblclick="this.readOnly='';" ></input>
                                </div>
                                <button type="submit" value="Submit" class="input-group-addon" style="width:39px;height:34px;" ><i class="glyphicon glyphicon-edit"></i></button>
                            </form>
                        </div>
                    </div>
                </div>

                {{/compare}}
            </fieldset>
        </div>
    </div>
    {{/compare}}

    {{#compare page "ideas"}}
    <div id="ideasDiv" class="ideas">
        <table class="table table-hover table-bordered">
            <thead class="userIdeasTableHead">
            <tr>
                <th>Idea</th>
                <th>State</th>
                <th>Score</th>
            </tr>
            </thead>
            <tbody>
            {{#if ideas}}
                {{#each ideas}}
                    <tr>
                        <td><a href="/ideas/{{id}}">{{title}}</a></td>
                        <td>{{state}}</td>
                        <td>{{score}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td class="noIdeas" colspan="3">No ideas yet.</td>
                </tr>
            {{/if}}
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                     {{add-pagination page pageNo pageTotal ""}}
                </ul>
            </div>
        </div>
    </div>
    {{/compare}}
    {{#compare page "submitIdea"}}
    <div id="submitDiv" class="submitIdea">

    </div>
    {{/compare}}
</div>
