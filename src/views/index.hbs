<section id="contact" class="contactSection">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="contactPage">
                    <h1 class="contactHeader">Contact Us</h1>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <h2 class="managerInfo">Raquel Pinho</h2>
                            <h4>R&D Manager</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4 class="addressInfo">Av. D. Joao II, Lote 1.07.2.1, piso 2 - 1990-096 Lisboa, Portugal</h4>
                            <h4>Tel: +351 210 331 600</h4>
                            <h4>Fax:+351 210 331 639</h4>
                            <h4>Mobile: +351 930 416 282</h4>
                            <h4>Email: raquel.pinho@altran.com</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="contactPageForm">
                        <h1 class="contactHeader">General Questions</h1>
                        <br>
                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-8">
                                    <form action="contact" method="post" id="contact_form">
                                            <div class="form-group">
                                            <label class="control-label">Name</label>
                                            <div class="inputGroupContainer">
                                                <input  name="name" class="form-control" type="text">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">E-Mail</label>
                                            <div class="inputGroupContainer">
                                                <input name="email" class="form-control" type="text">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Subject</label>
                                            <div class="inputGroupContainer">
                                                <input name="subject" class="form-control" type="text">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Message</label>
                                            <div class="inputGroupContainer">
                                                <textarea class="form-control" name="message"></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group submitContactButton">
                                            <label class="control-label"></label>
                                            <button type="submit" class="btn btn-sucess">Send<span class="glyphicon glyphicon-send"></span></button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-2"></div>
                            </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

