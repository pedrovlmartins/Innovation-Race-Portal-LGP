<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#registrationModal">
    Register
</button>
<div class="modal fade" id="registrationModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="panel-title text-center">
                    <h1 class="title">Create Account</h1>
                </div>
            </div>
            <div class="main-login main-center">
                <form class="form-horizontal" method="post" action="#">

                    <div class="container">
                            <div class="form-group">
                                <label for="firstName" class="col-sm-1 control-label">Full Name</label>
                                <div class="col-sm-4">
                                    <input type="text" id="firstName" placeholder="Full Name" class="form-control" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-1 control-label">Email</label>
                                <div class="col-sm-4">
                                    <input type="email" id="email" placeholder="Email" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-1 control-label">Password</label>
                                <div class="col-sm-4">
                                    <input type="password" id="password" placeholder="Password" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="col-sm-1 control-label">Confirm Password</label>
                                <div class="col-sm-4">
                                    <input type="password" id="password" placeholder="Confirm Password" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-1">User Type</label>
                                <div class="col-sm-4">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <label class="radio-inline">
                                                <input type="radio" id="MemberRadio" name="type" value="Member" onclick="fMember()">Member
                                            </label>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="radio-inline">
                                                <input type="radio" id="PartnerRadio" name="type" value="Partner" onclick="fPartner()">Partner
                                            </label>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="radio-inline">
                                                <input type="radio" id="CostumerRadio" name="type" value="Costumer" onclick="fCostumer()">Costumer
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- /.form-group -->

                    <div class="showhideopt">
                        <div id="Member" class="hide">
                            <div class="form-group">
                                <label for="businessArea" class="col-sm-1 control-label">Business Area</label>
                                <div class="col-sm-4">
                                    <input type="text" id="businessArea" placeholder="Business Area" class="form-control" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="collabNumber" class="col-sm-1 control-label">Collaborator number</label>
                                <div class="col-sm-4">
                                    <input type="text" id="collabNumber" placeholder="Collaborator Number" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="rle" class="col-sm-1 control-label">Role</label>
                                <div class="col-sm-4">
                                    <input type="text" id="role" placeholder="Role" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div id="Partner" class="hide">
                            <div class="form-group">
                                <label for="referral" class="col-sm-1 control-label">Referral</label>
                                    <div class="col-sm-4">
                                        <input type="text" id="referral" placeholder="Referral" class="form-control" autofocus>
                                    </div>
                            </div>
                        </div>

                        <div id="Costumer" class="hide">
                            <div class="form-group">
                                <label for="referral" class="col-sm-1 control-label">Referral</label>
                                <div class="col-sm-4">
                                    <input type="text" id="referral" placeholder="Referral" class="form-control" autofocus>
                                </div>
                            </div>
                        </div>

                    </div>

                        <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox">I accept <a href="#">terms</a>
                                        </label>
                                    </div>
                                </div>
                        </div> <!-- /.form-group -->

                        <div class="registerbutton">
                            <div class="form-group">
                                <div class="col-sm-9 col-sm-offset-6">
                                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                                </div>
                            </div>
                        </div>
                        </div>
                    </form> <!-- /form -->
                </div>
        </div>
    </div>
</div>