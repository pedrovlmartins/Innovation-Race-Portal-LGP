<!-- Login Modal -->
<div class="entire-login">

    <div class="modal fade" id="loginModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="panel-title text-center">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h1 class="title">Login</h1>
                    </div>
                </div>

                <div class="login-body">
                    <div class="row">
                        <div class="col-xs-offset-3 col-xs-6">
                            <br>
                            <form id="login-form" action="auth/login" method="post" role="form">
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control"
                                           placeholder="Email" value="" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2"
                                           class="form-control" placeholder="Password" required>
                                </div>


                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" name="login-submit" id="login-submit"
                                                    class="btn btn-primary btn-block">Login
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <a href="/passwordReset" tabindex="5" class="forgot-password">Forgot
                                                    Password?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <a data-target="#registrationModal" data-dismiss="modal"
                                                   data-toggle="modal" class="MainNavText" id="MainNavHelp"
                                                   href="#registrationModal" tabindex="5" class="forgot-password">Don't
                                                    have an account yet?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>